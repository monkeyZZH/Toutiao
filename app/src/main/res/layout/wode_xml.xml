<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#CBCBCB"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/qq_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/afe"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/qq_name"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="点击登录  >"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:onClick="but"
            android:layout_below="@+id/qq_image"
             />

    </RelativeLayout>

    <LinearLayout
        android:background="#ffff"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="50dp">
        <RadioButton
            android:id="@+id/shouye"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/a67"
            android:checked="true"
            android:textColor="@color/hei"
            android:text="收藏"
            android:textSize="13sp"

            />

        <RadioButton
            android:id="@+id/xigua"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/a87"
            android:text="历史"
            android:textSize="13sp"
            android:textColor="@color/hei"

            />
        <RadioButton
            android:id="@+id/daynight"
            android:layout_width="50dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/adh"
            android:text="夜间"
            android:textColor="@color/hei"

            android:textSize="13sp"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="消息通知"
            android:textColor="@color/hei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/ack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="头条商城"
            android:textColor="@color/hei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/ack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="京东特供"
            android:textColor="@color/hei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/ack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"

        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="我要爆料"
            android:textColor="@color/hei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/ack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="用户反馈"
            android:textColor="@color/hei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/ack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="系统设置"
            android:textColor="@color/hei"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@drawable/ack"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>




</LinearLayout>
